<h1>Wishes</h1>
<%= link_to 'Новое пожелание', new_wish_path %>

<ul>
  <% @wishes.each do |wish| %>
    <li>
      <strong><%= wish.title %></strong> by <%= wish.user.login %><br>
      <%= wish.description %><br>
      <%= link_to 'Просмотр', wish_path(wish) %> |
      <%= link_to 'Редактировать', edit_wish_path(wish) %> |
      <%= form_with(url: delWish_path(wish), method: :delete, local: true) do %>
        <br><%= submit_tag 'Удалить', data: { confirm: 'Вы уверены, что хотите удалить это пожелание?' }, class: "btn" %>
      <% end %>
    </li>
  <% end %>
</ul>
